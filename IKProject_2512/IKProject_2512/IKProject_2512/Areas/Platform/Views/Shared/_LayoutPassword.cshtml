<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IKProject_2512</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style2.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />


</head>
<body>
        <nav class="navbar navbar-dark navbar-expand-lg bg-soft-black text-white sticky-top">
            <div class="container py-2">
                <a href="#" class="navbar-brand">HR Management</a>

                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar-hrmanagement" aria-controls="navbar-hrmanagement">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbar-hrmanagement">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item pl-3">
                            <a class="btn btn-outline-secondary font-weight-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">Çıkış Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-soft-black text-muted text-white">
        <div class="container">
            &copy; 2021 - IKProject_2512 @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

