@model IEnumerable<IKProject_2512.Models.Employee>

@{
    ViewData["Title"] = "CoMgrList";
}

<h4>Şirket Yöneticileri Listesi</h4>

        <a class="btn btn-info text-white" asp-area="Platform" asp-controller="Company" asp-action="PassiveCoMgrList">Pasif Yöneticiler</a>

<table class="table table-primary table-hover table-active table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeMiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeLastName)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-transform:capitalize">

                @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td style="text-transform:capitalize">
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td style="text-transform:capitalize">
                @Html.DisplayFor(modelItem => item.EmployeeMiddleName)
            </td>
            <td style="text-transform:capitalize">
                @Html.DisplayFor(modelItem => item.EmployeeLastName)
            </td>
        <td style="text-align:left;">
            <a class="btn btn-dark" asp-area="Platform" asp-controller="Home" asp-action="EditCoMGr" asp-route-id="@item.EmployeeID">Güncelle</a>
            <a class="btn btn-info" asp-area="Platform" asp-controller="Home" asp-action="CompanyEmployeeDetails" asp-route-id="@item.EmployeeID">Detayları Gör</a>
            <a class="btn btn-danger" asp-area="Platform" asp-controller="Company" asp-action="DeleteCoMGr" asp-route-id="@item.EmployeeID">Yöneticiyi Sil</a>
        </td>

        </tr>
}
    </tbody>
</table>
