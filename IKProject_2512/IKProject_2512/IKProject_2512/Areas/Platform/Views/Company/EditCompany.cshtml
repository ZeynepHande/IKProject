@model IKProject_2512.Models.Company

@{
    ViewData["Title"] = "EditCompany";
}

<style>
    .form {
        background: rgba(255,255,255,0.9);
        padding: 40px;
        max-width: 600px;
        margin: 40px auto;
        border-radius: 10px;
        box-shadow: 0 0 20px 2px rgba(0,0,0,0.5);
    }
    h3 {
        text-align: center;
        text-shadow: 0 0 20px 2px rgba(0,0,0,0.9);
        color: deepskyblue;
        font-weight: 600;
        margin: 0 0 30px;
    }
    </style>
<div class="form">
    <h3>Şirket Bilgileri Güncelleme </h3>

    <form asp-action="EditCompany">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CompanyID" />
        <div class="form-group">
            <label asp-for="CompanyName" class="control-label"></label>
            <input asp-for="CompanyName" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CommercialName" class="control-label"></label>
            <input asp-for="CommercialName" class="form-control" />
            <span asp-validation-for="CommercialName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        @*<div class="form-group">
            <label asp-for="Logo" class="control-label"></label>
            <input asp-for="Logo" class="form-control" />
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>*@
        @*<div class="form-group">
            <label asp-for="MailExtension" class="control-label"></label>
            <input asp-for="MailExtension" class="form-control" />
            <span asp-validation-for="MailExtension" class="text-danger"></span>
        </div>*@

        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
        <div>
            <a asp-action="CompanyList" class="btn-danger">Listeye geri dön</a>
        </div>
    </form>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
