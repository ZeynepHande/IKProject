@model IKProject_2512.Models.Employee

@{
    ViewData["Title"] = "DetailsCoMgr";
}
<style>
    .form {
        background: rgba(255,255,255,0.9);
        padding: 40px;
        max-width: 600px;
        margin: 40px auto;
        border-radius: 10px;
        box-shadow: 0 0 20px 2px rgba(0,0,0,0.5);
    }

    h2 {
        text-align: center;
        text-shadow: 0 0 20px 2px rgba(0,0,0,0.9);
        color: deepskyblue;
        font-weight: 800;
        margin: 0 0 30px;
    }

    dt, dd {
        color: black;
        text-align: left;
    }
</style>

<div class="form">
    <h2>Kişisel Bilgilerim</h2>

    <dl class="row" style="text-transform:capitalize">

        <dd class="col-sm-12">
            <img src="@("~/ImageFile/"+Model.PhotoPath)" asp-append-version="true" width="100" />
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.EmployeeName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.EmployeeMiddleName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.EmployeeMiddleName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.EmployeeLastName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.EmployeeLastName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.MailAddress)
        </dt>
        <dd class="col-sm-8" style="text-transform:lowercase;">
            @Html.DisplayFor(model => model.MailAddress)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
    </dl>
</div>